---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/ui/Sidebar.astro';
import FeedList from '../components/islands/FeedList';
---

<Layout title="首页" description="数字花园与内容聚合站" withSidebar>
  <!-- Feed - Client-side rendered -->
  <FeedList client:load />

  <!-- Sidebar Slot -->
  <Sidebar slot="sidebar" />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
