---
/**
 * Article Detail Page
 * Dynamic route for displaying full article content
 *
 * Design: Book-like readability with high contrast serif typography
 * Reference: Craig Mod, Frank Chimero
 */

import Layout from '../../layouts/Layout.astro';
import { getArticleBySlug, getAllArticleSlugs } from '../../lib/api';
import ArticleContent from '../../components/islands/ArticleContent';
import TableOfContents from '../../components/islands/TableOfContents';

export async function getStaticPaths() {
  const slugs = await getAllArticleSlugs();
  return slugs.map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
const article = await getArticleBySlug(slug as string);

if (!article) {
  return Astro.redirect('/404');
}

const { title, content, date, image, metadata } = article;
const tags = (metadata as any)?.tags || [];
const readingTime = (metadata as any)?.readingTime || 5;
---

<Layout title={title} description={(metadata as any)?.excerpt || title}>
  <div class="article-layout">
    {/* Main content */}
    <article class="article-page">
      {/* Header - Minimal */}
      <header class="article-header">
        <h1 class="article-title">{title}</h1>
        <div class="article-meta">
          <time datetime={date.toISOString()}>
            {date.toLocaleDateString('zh-CN', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
        </div>
      </header>

      {/* Excerpt - Italic intro */}
      {(metadata as any)?.excerpt && (
        <p class="article-excerpt">{(metadata as any).excerpt}</p>
      )}

      {/* Cover Image */}
      {image && (
        <figure class="article-cover">
          <img src={image} alt={title} loading="eager" />
        </figure>
      )}

      {/* Content */}
      <div class="article-content">
        <ArticleContent content={content} client:load />
      </div>

      {/* Tags - At the end */}
      {tags.length > 0 && (
        <div class="article-tags">
          {tags.map((tag: string) => (
            <span class="article-tag">{tag}</span>
          ))}
        </div>
      )}

      {/* Footer */}
      <footer class="article-footer">
        <a href="/" class="back-link">← 返回首页</a>
      </footer>
    </article>

    {/* Sidebar - Table of Contents */}
    <aside class="article-sidebar">
      <TableOfContents client:load />
    </aside>
  </div>
</Layout>

<style>
  /* Layout */
  .article-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 72rem;
    margin: 0 auto;
    padding: 3rem 1.5rem 6rem;
  }

  @media (min-width: 1280px) {
    .article-layout {
      grid-template-columns: 1fr 220px;
      padding: 4rem 2rem 6rem;
    }
  }

  .article-page {
    max-width: 42rem;
  }

  /* Sidebar */
  .article-sidebar {
    display: none;
  }

  @media (min-width: 1280px) {
    .article-sidebar {
      display: block;
      padding-top: 6rem; /* Align with content */
    }
  }

  /* Header */
  .article-header {
    margin-bottom: 2rem;
  }

  .article-meta {
    font-family: var(--font-sans);
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin-bottom: 1.25rem;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .article-tag {
    font-family: var(--font-sans);
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.125rem 0.5rem;
    border: 1px solid var(--color-border-subtle, #e5e5e5);
    border-radius: 0.125rem;
    color: var(--color-text-secondary);
  }

  .article-title {
    font-family: var(--font-sans);
    font-size: 2rem;
    font-weight: 500;
    line-height: 1.25;
    color: var(--color-text-primary);
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .article-title {
      font-size: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .article-title {
      font-size: 2.875rem;
    }
  }

  .article-excerpt {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    font-style: italic;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }

  /* Cover */
  .article-cover {
    margin: 0 0 2.5rem;
  }

  .article-cover img {
    width: 100%;
    height: auto;
    border-radius: 0.375rem;
  }

  /* Content - Book-like prose */
  .article-content {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-primary);
  }

  .article-content :global(.article-content-html) > * + * {
    margin-top: 1.5em;
  }

  .article-content :global(h1),
  .article-content :global(h2),
  .article-content :global(h3) {
    font-family: var(--font-sans);
    font-weight: 600;
    color: var(--color-text-primary);
    line-height: 1.3;
    margin-top: 2em;
    margin-bottom: 0.75em;
  }

  .article-content :global(h1) { font-size: 1.75rem; }
  .article-content :global(h2) { font-size: 1.5rem; }
  .article-content :global(h3) { font-size: 1.25rem; }

  .article-content :global(p) {
    margin-bottom: 0;
  }

  .article-content :global(a) {
    color: var(--color-text-primary);
    text-decoration: underline;
    text-decoration-color: var(--color-border-subtle, #e5e5e5);
    text-underline-offset: 0.2em;
    transition: text-decoration-color 0.2s;
  }

  .article-content :global(a:hover) {
    text-decoration-color: currentColor;
  }

  .article-content :global(blockquote) {
    font-style: italic;
    padding-left: 1.5rem;
    border-left: 2px solid var(--color-border-subtle, #e5e5e5);
    color: var(--color-text-secondary);
  }

  .article-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background: var(--color-surface-secondary, #f5f5f7);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    padding-left: 1.5rem;
  }

  .article-content :global(li) {
    margin-top: 0.5em;
  }

  .article-content :global(.article-content-html img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.375rem;
    margin: 2rem 0;
    cursor: pointer;
  }

  .article-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border-subtle, #e5e5e5);
    margin: 3rem 0;
  }

  .article-content :global(.article-gallery) {
    margin: 2rem 0;
  }

  /* Footer */
  .article-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border-subtle, #e5e5e5);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-text-primary);
  }
</style>
